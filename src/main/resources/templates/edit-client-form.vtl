<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>Edit Client Information</h2>
    <div class="well">
      <form action="/stylists/$currentStylist.getId()/clients/$client.getId()/edit" method="post">
        <div class="form-group">
          <label for="name">Edit Name:</label>
          <input class="form-control" type="text" name="name" id="name" required value="$client.getName()">
        </div>
        <div class="form-group">
          <label for="stylistId">Change Stylist:</label>
          <select class="form-control" name="stylistId" selected="$currentStylist.getStylistId()">
            #foreach($people in $stylists)
              #if($client.getStylistId() == $people.getId())
                <option value="$people.getId()" selected>$people.getName()</option>
              #else
              <option value="$people.getId()">$people.getName()</option>
              #end
            #end
          </select>
        </div>
        <div class="form-inline">
          <div class="form-group">
            <label for="age">Edit Age:</label>
            <input class="form-control" type="text" name="age" required value="$client.getAge()">
          </div>
          <div class="form-group">
            <label for="gender">Edit Gender:</label>
            #if($client.getGender().equals("Male"))
              <label class="radio-inline"><input type="radio" name="gender" value="Male" required checked>Male</label>
              <label class="radio-inline"><input type="radio" name="gender" value="Female">Female</label>
              <label class="radio-inline"><input type="radio" name="gender" value="Other">Other</label>
            #elseif($client.getGender().equals("Female"))
              <label class="radio-inline"><input type="radio" name="gender" value="Male" required>Male</label>
              <label class="radio-inline"><input type="radio" name="gender" value="Female" checked>Female</label>
              <label class="radio-inline"><input type="radio" name="gender" value="Other">Other</label>
            #else
              <label class="radio-inline"><input type="radio" name="gender" value="Male" required>Male</label>
              <label class="radio-inline"><input type="radio" name="gender" value="Female">Female</label>
              <label class="radio-inline"><input type="radio" name="gender" value="Other" checked>Other</label>
            #end
          </div>
        </div>
        <div class="form-group">
          <label for="description">Change Description:</label>
          <textarea class="form-control" name="description" rows="8" cols="40" required>$client.getDescription()</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update Client</button>
      </form>
    </div>
  </div>
</div>
